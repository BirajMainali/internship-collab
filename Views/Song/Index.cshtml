@model IEnumerable<ProductApp.ViewModels.SongVm>

@{
    ViewData["Title"] = "Music App";
}

<h2 class="display-5">List of Songs</h2>

<a asp-action="Create" class="btn btn-primary shadow my-4">New Song</a>

<table class="table table-striped border">
    <thead>
    <tr>
        <th>Title</th>
        <th>Genre</th>
        <th>Artist</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var song in Model)
    {
        <tr>
            <td>@song.Title</td>
            <td>@song.Genre</td>
            <td>@song.Artists.FirstOrDefault()?.Text</td>
            <td>
                <a asp-action="Edit" asp-route-id="@song.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@song.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
