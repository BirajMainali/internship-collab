@model ProductApp.ViewModels.SongVm

@{
    ViewData["Title"] = "Edit Song";
}

<h2 class="display-5 mb-5">Edit Song Details</h2>

<form asp-action="Edit" method="post" class="w-75">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-4">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Genre"></label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="ArtistId">Artist</label>
        <select asp-for="ArtistId" asp-items="Model.Artists" class="form-control">
            <option value="">-- Select an Artist --</option>
        </select>
        <span asp-validation-for="ArtistId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
</form>
