@model ProductApp.ViewModels.CourseVm

<h1 class="display-5 mb-4">Add New Course</h1>

<form asp-action="Create" method="post" class=" w-75">
    @Html.Hidden("returnUrl", ViewData["ReturnUrl"] as string)
    <div class="form-group">
        <label asp-for="Title">Course Title</label>
        <input asp-for="Title" class="form-control"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group my-4">
        <label asp-for="Code">Course Code</label>
        <input asp-for="Code" class="form-control"/>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success my-4">Save</button>
</form> 