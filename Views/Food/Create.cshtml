@model FoodVm

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>
<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-2-sn">
                <input type="text" class="form-control" asp-for="Name"  placeholder="enter name"/>
                <span asp-validation-for="Name"/>
                <input type="number" class="form-control" asp-for="Price" placeholder="enter price"/>
                <input type="text" class="form-control" asp-for="Description" placeholder="enter description"/>

                <select asp-for="CategoryId" aria-selected="False" asp-items="Model.GetCategoryOptions()" class="form-control">
                    <option>Select</option>
                </select>
                <button type="submit">submit</button>
            </div>

        </div>

    </div>
</form>

