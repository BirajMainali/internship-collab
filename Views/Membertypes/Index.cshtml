@model System.Collections.Generic.List<ProductApp.Dto.MembertypesDto>

@{
    ViewBag.Title = "MemberTypes List";
    Layout = "_Layout";
}

<div class="container my-4">
    <h2 class="text-center mb-4 display-6 text-primary border-bottom pb-2">@ViewBag.Title</h2>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a class="btn btn-primary shadow-sm d-flex align-items-center" asp-controller="Membertypes" asp-action="Create">
            <i class="bi bi-plus-lg me-2"></i> Add MemberTypes
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center p-5">
            <i class="bi bi-info-circle fs-4"></i>
            <strong class="d-block mt-2">No Types available.Create one </strong>
        </div>
    }
    else
    {
        <div class="table-responsive rounded shadow-sm" style="max-height: 430px; overflow-y: auto;">
            <table class="table table-hover table-bordered align-middle">
                <thead class="bg-primary text-white text-center sticky-top">
                <tr>
                    <th style="min-width: 150px;">TypeName</th>
                    <th style="min-width: 200px;">MemberCount</th>
                    <th style="min-width: 150px;">Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-wrap">@item.TypeName</td>
                        <td class="text-wrap">@item.MemberCount</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-warning me-2 shadow-sm" asp-controller="Membertypes" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-danger shadow-sm" asp-controller="Membertypes" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this Membertype?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .table thead th {
        position: sticky;
        top: 0;
        z-index: 2;
    }
    .btn {
        transition: all 0.3s ease-in-out;
    }
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>