@model MembertypesVm

@{
    ViewBag.Title = "Create MemberType";
    Layout = "_Layout";
}

<div class="container my-4">
    <h2 class="text-center mb-4 display-6 text-primary border-bottom pb-2">@ViewBag.Title</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="TypeName" class="form-label">Type Name</label>
                    <input asp-for="TypeName" class="form-control" />
                    <span asp-validation-for="TypeName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MemberCount" class="form-label">Member Count</label>
                    <input asp-for="MemberCount" type="number" class="form-control" />
                    <span asp-validation-for="MemberCount" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
